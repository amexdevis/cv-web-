/* General Styles */
body {
  font-family: 'Poppins', sans-serif;
  line-height: 1.6;
  background-color: #fff;
  color: #000;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
}

.text-purple {
  color: #6f42c1 !important;
}

.bg-purple {
  background-color: #6f42c1 !important;
}

.navbar-brand {
  font-weight: bold;
}

.card {
  transition: transform 0.3s ease-in-out;
}

.card:hover {
  transform: scale(1.05);
}
